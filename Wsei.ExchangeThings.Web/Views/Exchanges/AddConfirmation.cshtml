@model AddNewItemConfirmationViewModel
@inject Wsei.ExchangeThings.Web.Database.ExchangesDbContext DbContext;

<h2>Add new item</h2>

<p>Congratulations!</p>

<p>Your new item was successfully added to the system</p>

<table style="width:100%">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Visibility</th>
    </tr>
    @foreach (var item in DbContext.Items)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Description</td>
        <td>@item.IsVisible</td>
    </tr>
    }
</table>